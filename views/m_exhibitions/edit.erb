<form method="POST" action="/exhibitions_manager/<%= @exhibition.id %>">

  <label for="title">Title:</label>
  <input
  type="text"
  name="title"
  id="title"
  value="<%= @exhibition.title %>"
  />

  <label for="artist_select">Select artist:</label>
    <select name="artist_id" id="artist_select" selected="<%= @exhibition.artist_id  %>">
      <% @artists.each do |artist| %>
        <% if artist.id == @exhibition.artist_id %>
          <option value=<%= artist.id %> selected><%= artist.name %></option>
        <% else %>
          <option value=<%= artist.id %>><%= artist.name %></option>
        <% end %>
      <% end %>
    </select>

    <label for="category_select">Select category:</label>
      <select name="category_id" id="category_select" selected="<%= @exhibition.category_id  %>">
        <% @categories.each do |category| %>
          <% if category.id == @exhibition.category_id %>
            <option value = <%= category.id %> selected> <%= category.type %></option>
          <% else %>
            <option value=<%= category.id %>> <%= category.type %></option>
          <% end %>
        <% end %>
      </select>

  <label for="date_of_exhibition">Date:</label>
  <input
  type="date"
  name="date_of_exhibition"
  id="date_of_exhibition"
  value="<%= @exhibition.date_of_exhibition %>"
  />

  <label for="time_of_exhibition">Time:</label>
  <input
  type="time"
  name="time_of_exhibition"
  id="time_of_exhibition"
  value="<%= @exhibition.time_of_exhibition %>"
  />

  <label for="description">Description:</label>
  <input
  type="text"
  name="desription"
  id="description"
  value="<%= @exhibition.description() %>"
  />

  <input type='submit' value="Edit exhibition">
</form>
